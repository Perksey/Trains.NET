<Project>

  <PropertyGroup>
    <RestoreSources>
      https://api.nuget.org/v3/index.json;
      https://pkgs.dev.azure.com/dnceng/public/_packaging/dotnet-tools/nuget/v3/index.json;
    </RestoreSources>
  </PropertyGroup>
  
  <ItemGroup>

    <PackageReference Update="System.Collections.Immutable" Version="6.0.0-rc.2.21480.5" />

    <!-- Analyzers etc. -->
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.CodeStyle" Version="4.0.0-6.final" />

    <!-- For source generators -->
    <PackageReference Update="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.0.0-6.final" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.3" PrivateAssets="all" />

    <!-- SkiaSharp -->
    <PackageReference Update="SkiaSharp"                    Version="2.88.0-preview.152" />
    <PackageReference Update="SkiaSharp.Views.WindowsForms" Version="2.88.0-preview.152" />
    <PackageReference Update="SkiaSharp.Views.WPF"          Version="2.88.0-preview.152" />
    <PackageReference Update="SkiaSharp.Views.Blazor"       Version="2.88.0-preview.152" />

    <!-- Latest C# compiler -->
    <PackageReference Include="Microsoft.Net.Compilers.Toolset" Version="4.0.0-6.final">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>

    <!-- Nerdbank GitVersioning -->
    <PackageReference Include="Nerdbank.GitVersioning" Version="3.4.240">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>

    <!-- Test dependencies -->
    <PackageReference Update="Microsoft.NET.Test.Sdk" Version="16.11.0" />
    <PackageReference Update="xunit" Version="2.4.1" />
    <PackageReference Update="xunit.runner.visualstudio" Version="2.4.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Update="coverlet.collector" Version="1.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  
</Project>
